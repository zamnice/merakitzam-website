---
layout: layouts/base.njk
---

<article class="container mx-auto px-4 py-16">
    <div class="max-w-3xl mx-auto">
        <header class="mb-12">
            <div class="flex flex-wrap gap-2 mb-4">
                {% for category in categories %}
                <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm">{{ category }}</span>
                {% endfor %}
            </div>
            
            <h1 class="font-heading text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
            
            <div class="flex items-center text-gray-600 dark:text-gray-400 mb-6">
                <span>{{ date | readableDate }}</span>
                <span class="mx-2">•</span>
                <span>Oleh {{ author }}</span>
                <span class="mx-2">•</span>
                <span>{{ content | readingTime }} menit dibaca</span>
            </div>
            
            {% if thumbnail %}
            <img src="{{ thumbnail }}" alt="{{ title }}" class="w-full rounded-xl mb-8 shadow-lg">
            {% endif %}
        </header>
        
        <div class="prose dark:prose-invert max-w-none">
            {{ content | safe }}
        </div>
        
        <footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
            {% if tags %}
            <div class="flex flex-wrap gap-2 mb-6">
                {% for tag in tags %}
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-sm">#{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
            
            <!-- Share buttons -->
            <div class="flex gap-4">
                <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ page.url | absoluteUrl | urlencode }}" 
                   target="_blank" rel="noopener"
                   class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-500 transition-colors">
                    <i class="fab fa-twitter"></i> Share on Twitter
                </a>
                
                <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ page.url | absoluteUrl | urlencode }}" 
                   target="_blank" rel="noopener"
                   class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 transition-colors">
                    <i class="fab fa-linkedin"></i> Share on LinkedIn
                </a>
            </div>
        </footer>
    </div>
</article>

<!-- Related Posts -->
<section class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <h2 class="font-heading text-2xl md:text-3xl font-bold mb-8">Artikel Terkait</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% set relatedPosts = collections.blog | filterByCategories(categories) | excludeCurrent(url) | limit(3) %}
            
            {% for post in relatedPosts %}
            <a href="{{ post.url }}" class="group">
                <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-all duration-300">
                    {% if post.data.thumbnail %}
                    <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="w-full h-40 object-cover">
                    {% else %}
                    <div class="w-full h-40 bg-gradient-to-br from-primary to-orange-400 flex items-center justify-center">
                        <i class="fas fa-feather-alt text-white text-2xl"></i>
                    </div>
                    {% endif %}
                    
                    <div class="p-4">
                        <h3 class="font-heading text-lg font-bold mb-2 group-hover:text-primary transition-colors">
                            {{ post.data.title }}
                        </h3>
                        <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-2">
                            {{ post.data.excerpt }}
                        </p>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
